import java.util.*;

public class Main {

    public static class Bank {
        ArrayList<Double> listInteractions = new ArrayList<Double>();
        double amount = 0;

        public Bank() {
            this.amount = 0;
        }
        public Bank(double amount) {
            this.amount = amount;
        }

        void deposit(double num) {
            amount += num;
            listInteractions.add(num);
        }
        void withdraw(double num) {
            amount -= num;
            listInteractions.add(-num);
        }
        void listInteraction() {
            System.out.println(listInteractions);
        }
        void printString() {
            System.out.println("Amount: " + amount);
        }
    }

    public static void main(String[] args) {
        Bank account1 = new Bank(50000);
        account1.deposit(5000);
        account1.listInteraction();
        account1.printString();
        account1.withdraw(25000.50);
        account1.deposit(9000);
        account1.listInteraction();
        account1.printString();
        account1.withdraw(1000);
        account1.withdraw(10000);
        account1.listInteraction();
        account1.printString();
    }
}
